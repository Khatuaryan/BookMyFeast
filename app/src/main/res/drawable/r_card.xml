<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background color with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Rounded corners -->
            <solid android:color="#FFFFFF" /> <!-- White background color -->
        </shape>
    </item>

    <!-- Shadow effect at the bottom -->
    <item android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- Shadow follows the rounded corners -->
            <solid android:color="#80000000" /> <!-- Semi-transparent black for shadow -->
        </shape>
    </item>

    <!-- Border (optional, for a cleaner design) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#DDDDDD" /> <!-- Light gray border -->
        </shape>
    </item>
</layer-list>
